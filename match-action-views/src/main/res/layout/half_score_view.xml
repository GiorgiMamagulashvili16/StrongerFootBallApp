<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="3dp"
    >

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/statisticsBackground"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="@dimen/dimens_dp_18"
        android:layout_marginTop="@dimen/dimens_dp_214"
        android:src="@drawable/halfs"
        />

    <TextView
        android:id="@+id/halfIndicatorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_1st_half"
        android:layout_marginStart="10dp"
        android:textColor="@color/indicator_color"
        android:textSize="@dimen/dimens_sp_9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/scoreIndicatorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/dimen_dp_10"
        android:textColor="@color/indicator_color"
        android:textSize="@dimen/dimens_sp_9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="5:2" />

</androidx.constraintlayout.widget.ConstraintLayout>