<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_dp_47"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/firstTeamActionIcon"
        android:layout_width="@dimen/dimen_dp_25"
        android:layout_height="@dimen/dimen_dp_25"
        android:layout_marginEnd="@dimen/dimen_dp_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_substitution" />

    <androidx.cardview.widget.CardView
        android:id="@+id/firstTeamFirstPlayerImageCardView"
        android:layout_width="@dimen/dimen_dp_30"
        android:layout_height="@dimen/dimen_dp_30"
        app:cardCornerRadius="@dimen/dimen_dp_15"
        android:layout_marginStart="@dimen/dimen_dp_13"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/firstPlayerImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/firstTeamSecondPlayerImageCardView"
        android:layout_width="@dimen/dimen_dp_30"
        android:layout_height="@dimen/dimen_dp_30"
        app:cardCornerRadius="@dimen/dimen_dp_15"
        android:layout_marginStart="@dimen/dimen_dp_13"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="invisible">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/secondPlayerImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/firstTeamActionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_dp_8"
        android:textColor="@color/gray"
        android:textSize="@dimen/dimen_sp_11"
        app:layout_constraintBottom_toTopOf="@+id/firstTeamPlayerName"
        app:layout_constraintStart_toEndOf="@+id/firstTeamFirstPlayerImageCardView"
        app:layout_constraintTop_toTopOf="@+id/firstTeamFirstPlayerImageCardView"
        tools:text="26' ragaca" />

    <TextView
        android:id="@+id/firstTeamPlayerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_sp_12"
        app:layout_constraintBottom_toBottomOf="@+id/firstTeamFirstPlayerImageCardView"
        app:layout_constraintStart_toEndOf="@+id/firstTeamFirstPlayerImageCardView"
        app:layout_constraintTop_toBottomOf="@+id/firstTeamActionText"
        tools:text="26' ragaca" />

    <TextView
        android:id="@+id/firstTeamSubstitutedPlayerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_dp_8"
        android:textColor="@color/gray"
        android:textSize="@dimen/dimen_sp_12"
        app:layout_constraintStart_toEndOf="@+id/firstTeamFirstPlayerImageCardView"
        app:layout_constraintTop_toBottomOf="@+id/firstTeamPlayerName"
        tools:text="26' ragaca" />


</androidx.constraintlayout.widget.ConstraintLayout>