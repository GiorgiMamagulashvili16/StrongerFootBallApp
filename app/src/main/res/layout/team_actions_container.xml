<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/firstTeamLinearLayout"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toStartOf="@id/centerView"
        app:layout_constraintStart_toStartOf="parent"/>

    <View
        android:id="@+id/centerView"
        android:layout_width="@dimen/dimen_dp_7"
        android:layout_height="@dimen/dimen_dp_7"
        android:background="@android:color/transparent"
        android:foreground="@drawable/circle"
        android:foregroundTint="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/dividerView"
        android:layout_width="@dimen/dimen_dp_1"
        android:layout_height="0dp"
        android:background="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/secondTeamLinearLayout"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/centerView"/>

</androidx.constraintlayout.widget.ConstraintLayout>